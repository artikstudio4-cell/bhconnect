# ============================================
# CONFIGURATION ENVIRONMENT - BH CONNECT
# Copier ce fichier en .env et remplir les valeurs
# ⚠️ NE JAMAIS commiter .env sur git
# ============================================

# Environnement (production, development, testing)
ENVIRONMENT=development

# Base de Données
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cabinet_immigration
DB_USER=root
DB_PASS=

# Application
APP_NAME=BH CONNECT
APP_DEBUG=false
APP_LOG_LEVEL=error

# Session
SESSION_TIMEOUT=3600
SESSION_NAME=bh_connect_session

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Email Configuration
MAIL_DRIVER=php
MAIL_FROM=noreply@bhconnect.com
MAIL_FROM_NAME=BH CONNECT
MAIL_CC=admin@bhconnect.com

# SMTP (si MAIL_DRIVER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ENCRYPTION=tls

# Timezone
APP_TIMEZONE=Europe/Paris

# Security
CSRF_TOKEN_LENGTH=32
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_WINDOW=300
